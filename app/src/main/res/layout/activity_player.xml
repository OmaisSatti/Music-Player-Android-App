<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF000000"
    android:weightSum="10"
    tools:context=".PlayerActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVolum"
            android:background="@drawable/volum_round_border"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_volume_up"></ImageButton>
        <SeekBar
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="12dp"
            android:id="@+id/volumSeekBar"></SeekBar>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="7">
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/music">
    </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Song Name"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:id="@+id/lblSong"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:textColor="#FFFFFFFF"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/text_round_border"
                android:src="@drawable/icon_pause"
                android:layout_marginTop="15dp"
                android:tooltipText="Play Music"
                android:padding="3dp"
                android:id="@+id/btnPause"></ImageButton>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_forward"
                android:layout_marginTop="15dp"
                android:background="@drawable/text_round_border"
                android:layout_toRightOf="@id/btnPause"
                android:tooltipText="Next Music"
                android:layout_marginLeft="20dp"
                android:id="@+id/btnNext"></ImageButton>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_rewind"
                android:padding="3dp"
                android:background="@drawable/text_round_border"
                android:layout_toLeftOf="@id/btnPause"
                android:layout_marginRight="20sp"
                android:layout_marginTop="15dp"
                android:tooltipText="Previous Music"
                android:id="@+id/btnPrevious"></ImageButton>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:id="@+id/songSeekBar"></SeekBar>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textStyle="bold"
                android:id="@+id/player_Position"
                android:layout_above="@id/songSeekBar"
                android:layout_marginLeft="12dp"
                android:textColor="@android:color/white"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textStyle="bold"
                android:id="@+id/player_Duration"
                android:layout_above="@id/songSeekBar"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/white"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:textSize="10sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="Powered By Messi"></TextView>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>